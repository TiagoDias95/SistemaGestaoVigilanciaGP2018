@model IEnumerable<SistemaGestaoVigilanciaGP2018.Models.ApplicationUser>


@{
    ViewData["Title"] = "ListaDocenteVigias";
}

<h2>ListaDocenteVigias</h2>


<p>
    <a asp-action="FazerPedido">Criar um nova vigia</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumeroDocente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrimeiroNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UltimoNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroVigias)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroDocente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrimeiroNome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UltimoNome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroVigias)
                </td>
            </tr>
        }
    </tbody>
</table>